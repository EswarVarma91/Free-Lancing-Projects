<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#03adc2" />
            <gradient android:angle="-90" android:startColor="#087583" android:endColor="#167986"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#17afc2" />
            <solid android:color="#087583"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#03b2c9" />
            <gradient android:angle="-90" android:startColor="#087583" android:endColor="#03aec4" />
        </shape>
    </item>
</selector>