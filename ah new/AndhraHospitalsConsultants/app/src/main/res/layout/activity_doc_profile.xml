<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".DocProfile">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_register"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="0dp">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_marginTop="80dp"
            android:src="@drawable/logonw" />
    </LinearLayout>

            <LinearLayout
                android:id="@+id/email_login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/btnbgh2"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ddname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/icons8_doctor_male_18px"
                        android:drawablePadding="10dp"
                        android:paddingLeft="12dp"
                        android:textSize="14sp"
                        android:hint="Name"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ddmobile"
                        android:drawableLeft="@drawable/icons8_android_18px"
                        android:drawablePadding="10dp"
                        android:layout_width="fill_parent"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Mobile Number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ddemail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icons8_email_18px"
                        android:drawablePadding="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="13sp"
                        android:hint="Email"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ddpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icons8_password_18px"
                        android:drawablePadding="10dp"
                        android:hint="Enter password"
                        android:textSize="13sp"
                        android:imeActionId="6"
                        android:inputType="textPassword"
                        android:imeActionLabel="Hello"
                        android:imeOptions="actionUnspecified"
                        android:maxLines="1"
                        android:layout_marginBottom="50dp"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

</FrameLayout>