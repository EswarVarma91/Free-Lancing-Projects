<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/colorPrimary"
    tools:layout_editor_absoluteY="81dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <TextView
           android:id="@+id/userid"
           android:textColor="#FFFFFF"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="12dp"
           android:text="ID : " />

       <TextView
           android:id="@+id/username"
           android:textColor="#FFFFFF"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="12dp"
           android:text="Name : " />


       <TextView
           android:textColor="#FFFFFF"
           android:id="@+id/usersonof"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="12dp"
           android:text="S/O,D/O,W/O : " />

       <TextView
           android:textColor="#FFFFFF"
           android:id="@+id/userage"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="12dp"
           android:text="Age : "/>

       <TextView
           android:textColor="#FFFFFF"
           android:id="@+id/useraadhar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="12dp"
           android:text="Aadhar : " />

       <TextView
           android:textColor="#FFFFFF"
           android:id="@+id/usermobile"
           android:layout_width="match_parent"
           android:textSize="12dp"
           android:layout_height="wrap_content"
           android:text="Mobile : " />

       <TextView
           android:textColor="#FFFFFF"
           android:id="@+id/userstate"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="12dp"
           android:layout_marginTop="3dp"
           android:text="State : " />

       <TextView
           android:textColor="#FFFFFF"
           android:id="@+id/userdistrict"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="1dp"
           android:textSize="12dp"
           android:text="District : " />


       <TextView
           android:textColor="#FFFFFF"
           android:id="@+id/usermandal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="12dp"
           android:text="Mandal : " />

       <TextView
           android:textColor="#FFFFFF"
           android:id="@+id/uservillage"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="12dp"
           android:text="Village : " />

       <TextView
           android:textColor="#FFFFFF"
           android:id="@+id/userdateofjoining"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Date Of Joining : "
           android:textSize="12dp" />
   </LinearLayout>

</android.support.constraint.ConstraintLayout>